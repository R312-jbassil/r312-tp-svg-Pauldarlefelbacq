---
import "../styles/global.css";
import {ui}  from "../i18n/ui.js";

const locale = Astro.locals.lang as 'en' | 'fr' ?? 'en';
console.log('Locale in index:', locale);
---
<!doctype html>
<html lang="en" data-theme="light" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="h-full">
		<div class="h-full flex flex-col min-h-0">
			<header class="bg-base-100 shadow-sm border-b border-base-300">
				<div class="container mx-auto px-6 py-4">
					<nav class="flex items-center justify-between">
						<div class="flex items-center space-x-4">
							<a href="/" class="text-xl font-bold text-primary hover:text-primary-focus transition-colors">
								SVG Generator
							</a>
							<a href="/login" class="btn btn-ghost btn-sm">
								Se connecter
							</a>
							<form method="POST" action="/api/logout" class="m-0 p-0 ml-4">
								<button type="submit" class="btn btn-primary">Logout</button>
							</form>
						</div>
						<form method="POST" action={Astro.url.pathname}>
							<select name="language" class="select" onchange="this.form.submit()">
								<option disabled selected="true">{ui[locale].nav.language}</option>
								<option value="en" >English</option>
								<option value="fr" >Fran√ßais</option>
							</select>
						</form>

						<div class="flex items-center space-x-4">
							<a href="/" class="btn btn-ghost btn-sm">
								{ui[locale].nav.home}
							</a>
							<a href="/generator" class="btn btn-ghost btn-sm">
								{ui[locale].nav.generator}
							</a>
							<a href="/gallery" class="btn btn-ghost btn-sm">
								{ui[locale].nav.gallery}
							</a>
						</div>
					</nav>
				</div>
			</header>
			
			<!-- Contenu principal -->
			<div class="flex-1 min-h-0">
				<slot />
			</div>
		</div>
	</body>
</html>