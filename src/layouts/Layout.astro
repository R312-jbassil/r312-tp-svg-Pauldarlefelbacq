---
import "../styles/global.css";
import {ui}  from "../i18n/ui.js";

const locale = Astro.locals.lang as 'en' | 'fr' ?? 'en';
const user = Astro.locals.user;
const POCKETBASE_URL = import.meta.env.POCKETBASE_URL || 'http://127.0.0.1:8090';
console.log('Locale in layout:', locale);
console.log('User in layout:', user);
console.log('PocketBase URL:', POCKETBASE_URL);
---
<!doctype html>
<html lang="en" data-theme="light" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="h-full">
		<div class="h-full flex flex-col min-h-0">
			<header class="bg-base-100 shadow-sm border-b border-base-300">
				<div class="container mx-auto px-6 py-4">
					<nav class="flex items-center justify-between">
						<div class="flex items-center space-x-4">
							<a href="/" class="text-xl font-bold text-primary hover:text-primary-focus transition-colors">
								SVG Generator
							</a>
						</div>
						
						<div class="flex items-center space-x-4">
							<a href="/" class="btn btn-ghost btn-sm">
								{ui[locale].nav.home}
							</a>
							<a href="/generator" class="btn btn-ghost btn-sm">
								{ui[locale].nav.generator}
							</a>
							<a href="/gallery" class="btn btn-ghost btn-sm">
								{ui[locale].nav.gallery}
							</a>
						</div>

						<div class="flex items-center space-x-4">
							<label class="toggle text-base-content">
								<input type="checkbox" value="totalgoat" class="theme-controller" />

								<svg aria-label="sun" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g stroke-linejoin="round" stroke-linecap="round" stroke-width="2" fill="none" stroke="currentColor"><circle cx="12" cy="12" r="4"></circle><path d="M12 2v2"></path><path d="M12 20v2"></path><path d="m4.93 4.93 1.41 1.41"></path><path d="m17.66 17.66 1.41 1.41"></path><path d="M2 12h2"></path><path d="M20 12h2"></path><path d="m6.34 17.66-1.41 1.41"></path><path d="m19.07 4.93-1.41 1.41"></path></g></svg>

								<svg aria-label="moon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g stroke-linejoin="round" stroke-linecap="round" stroke-width="2" fill="none" stroke="currentColor"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path></g></svg>

							</label>
							<form method="POST" action={Astro.url.pathname}>
								<select name="language" class="select select-sm select-bordered" onchange="this.form.submit()">
									<option disabled selected="true">{ui[locale].nav.language}</option>
									<option value="en">English</option>
									<option value="fr">Fran√ßais</option>
								</select>
							</form>

							{user ? (
								<div class="dropdown dropdown-end">
									<label tabindex="0" class="btn btn-ghost btn-circle avatar">
										<div class="w-10 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
											{user.avatar ? (
												<img src={`${POCKETBASE_URL}/api/files/_pb_users_auth_/${user.id}/${user.avatar}`} alt="Profile" />
											) : (
												<div class="bg-neutral text-neutral-content flex items-center justify-center w-full h-full">
													<span class="text-xl">{user.name?.[0]?.toUpperCase() || user.email?.[0]?.toUpperCase() || 'U'}</span>
												</div>
											)}
										</div>
									</label>
									<ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
										<li class="menu-title">
											<span>{user.name || user.email}</span>
										</li>
										<li><a href="/profile">{ui[locale].nav.profile || 'Profile'}</a></li>
										<li>
											<form method="POST" action="/api/logout" class="w-full">
												<button type="submit" class="w-full text-left">{ui[locale].nav.logout || 'Logout'}</button>
											</form>
										</li>
									</ul>
								</div>
							) : (
								<a href="/login" class="btn btn-primary btn-sm">
									{ui[locale].nav.login || 'Login'}
								</a>
							)}
						</div>
					</nav>
				</div>
			</header>
			
			<div class="flex-1 min-h-0">
				<slot />
			</div>
		</div>
	</body>
</html>